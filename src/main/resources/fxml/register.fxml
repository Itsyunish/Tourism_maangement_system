<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tourism.controller.RegisterController">
   <children>
      <VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: linear-gradient(to bottom, #4CAF50, #388E3C);">
         <children>
            <Label text="Register New Account" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <VBox alignment="CENTER" maxWidth="400.0" spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 30;">
               <children>
                  <Label text="📝 Create Account" textFill="#388E3C">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
                  <GridPane hgap="10.0" vgap="10.0">
                     <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                     </rowConstraints>
                     <children>
                        <Label text="Username:" />
                        <TextField fx:id="usernameField" promptText="Enter username" GridPane.columnIndex="1" />
                        <Label text="Password:" GridPane.rowIndex="1" />
                        <PasswordField fx:id="passwordField" promptText="Enter password" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Label text="Full Name:" GridPane.rowIndex="2" />
                        <TextField fx:id="fullNameField" promptText="Enter full name" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <Label text="Email:" GridPane.rowIndex="3" />
                        <TextField fx:id="emailField" promptText="Enter email" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        <Label text="Phone:" GridPane.rowIndex="4" />
                        <TextField fx:id="phoneField" promptText="Enter phone number" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                        <Label text="Role:" GridPane.rowIndex="5" />
                        <ComboBox fx:id="roleComboBox" prefWidth="150.0" promptText="Select role" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                     </children>
                  </GridPane>
                  <HBox alignment="CENTER" spacing="10.0">
                     <children>
                        <Button fx:id="registerButton" onAction="#handleRegister" prefWidth="100.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Register" />
                        <Button fx:id="backButton" onAction="#goBackToLogin" prefWidth="100.0" style="-fx-background-color: #757575; -fx-text-fill: white;" text="Back" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </padding>
      </VBox>
   </children>
</VBox>
