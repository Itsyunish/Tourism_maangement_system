<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tourism.controllers.RegisterController">
   <children>
      <VBox alignment="CENTER" prefHeight="600.0" prefWidth="700.0" style="-fx-background-color: linear-gradient(to bottom, #4682B4, #1E90FF);">
         <children>
            <ScrollPane fitToWidth="true" style="-fx-background: transparent; -fx-background-color: transparent;">
               <content>
                  <VBox alignment="CENTER" maxWidth="600.0" style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0, 0, 5);">
                     <padding>
                        <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
                     </padding>
                     <children>
                        <Label text="Register New User" textAlignment="CENTER">
                           <font>
                              <Font name="System Bold" size="20.0" />
                           </font>
                           <VBox.margin>
                              <Insets bottom="25.0" />
                           </VBox.margin>
                        </Label>
                        
                        <VBox spacing="20.0">
                           <children>
                              <!-- Basic Information Section -->
                              <VBox spacing="15.0" style="-fx-background-color: #F8F9FA; -fx-padding: 20; -fx-background-radius: 10;">
                                 <children>
                                    <Label text="Basic Information" style="-fx-font-weight: bold; -fx-font-size: 14px;" />
                                    
                                    <HBox spacing="15.0">
                                       <children>
                                          <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                             <children>
                                                <Label text="Username *" />
                                                <TextField fx:id="usernameField" promptText="Enter username" style="-fx-pref-height: 35;" />
                                             </children>
                                          </VBox>
                                          <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                             <children>
                                                <Label text="Password *" />
                                                <PasswordField fx:id="passwordField" promptText="Enter password" style="-fx-pref-height: 35;" />
                                             </children>
                                          </VBox>
                                       </children>
                                    </HBox>
                                    
                                    <VBox spacing="5.0">
                                       <children>
                                          <Label text="Full Name *" />
                                          <TextField fx:id="fullNameField" promptText="Enter your full name" style="-fx-pref-height: 35;" />
                                       </children>
                                    </VBox>
                                    
                                    <HBox spacing="15.0">
                                       <children>
                                          <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                             <children>
                                                <Label text="Email *" />
                                                <TextField fx:id="emailField" promptText="Enter email address" style="-fx-pref-height: 35;" />
                                             </children>
                                          </VBox>
                                          <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                             <children>
                                                <Label text="Phone *" />
                                                <TextField fx:id="phoneField" promptText="Enter phone number" style="-fx-pref-height: 35;" />
                                             </children>
                                          </VBox>
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>
                              
                              <!-- Role Selection Section -->
                              <VBox spacing="15.0" style="-fx-background-color: #E8F4FD; -fx-padding: 20; -fx-background-radius: 10;">
                                 <children>
                                    <Label text="Role Selection" style="-fx-font-weight: bold; -fx-font-size: 14px;" />
                                    
                                    <VBox spacing="5.0">
                                       <children>
                                          <Label text="Select Role *" />
                                          <ComboBox fx:id="roleComboBox" prefWidth="200.0" promptText="Choose your role" style="-fx-pref-height: 35;" />
                                       </children>
                                    </VBox>
                                 </children>
                              </VBox>
                              
                              <!-- Role-Specific Information Section -->
                              <VBox fx:id="roleSpecificSection" spacing="15.0" style="-fx-background-color: #FFF3E0; -fx-padding: 20; -fx-background-radius: 10;">
                                 <children>
                                    <Label fx:id="roleSpecificLabel" text="Additional Information" style="-fx-font-weight: bold; -fx-font-size: 14px;" />
                                    
                                    <!-- Tourist Fields -->
                                    <VBox fx:id="touristFields" spacing="5.0" visible="false" managed="false">
                                       <children>
                                          <Label fx:id="nationalityLabel" text="Nationality *" />
                                          <TextField fx:id="nationalityField" promptText="Enter your nationality" style="-fx-pref-height: 35;" />
                                       </children>
                                    </VBox>
                                    
                                    <!-- Guide Fields -->
                                    <VBox fx:id="guideFields" spacing="10.0" visible="false" managed="false">
                                       <children>
                                          <VBox spacing="5.0">
                                             <children>
                                                <Label fx:id="languagesLabel" text="Languages Spoken *" />
                                                <TextField fx:id="languagesField" promptText="e.g., English, Nepali, Hindi (comma separated)" style="-fx-pref-height: 35;" />
                                                <Label text="Separate multiple languages with commas" style="-fx-font-size: 11px; -fx-text-fill: #666;" />
                                             </children>
                                          </VBox>
                                          
                                          <VBox spacing="5.0">
                                             <children>
                                                <Label fx:id="experienceLabel" text="Years of Experience *" />
                                                <TextField fx:id="experienceField" promptText="Enter years of guiding experience" style="-fx-pref-height: 35;" />
                                             </children>
                                          </VBox>
                                       </children>
                                    </VBox>
                                 </children>
                              </VBox>
                           </children>
                        </VBox>
                        
                        <!-- Action Buttons -->
                        <HBox alignment="CENTER" spacing="20.0">
                           <VBox.margin>
                              <Insets top="25.0" />
                           </VBox.margin>
                           <children>
                              <Button fx:id="registerButton" onAction="#handleRegister" prefWidth="140.0" style="-fx-background-color: #32CD32; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-height: 45; -fx-font-size: 14px;" text="Register" />
                              <Button fx:id="backButton" onAction="#handleBack" prefWidth="140.0" style="-fx-background-color: #808080; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-height: 45; -fx-font-size: 14px;" text="Back to Login" />
                           </children>
                        </HBox>
                        
                        <Label text="* Required fields" style="-fx-font-size: 11px; -fx-text-fill: #666;">
                           <VBox.margin>
                              <Insets top="10.0" />
                           </VBox.margin>
                        </Label>
                     </children>
                  </VBox>
               </content>
            </ScrollPane>
         </children>
      </VBox>
   </children>
</VBox>

