<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tourism.controllers.RegisterController">
   <children>
      <VBox alignment="CENTER" prefHeight="500.0" prefWidth="600.0" style="-fx-background-color: linear-gradient(to bottom, #4682B4, #1E90FF);">
         <children>
            <ScrollPane fitToWidth="true" style="-fx-background: transparent;">
               <content>
                  <VBox alignment="CENTER" maxWidth="500.0" style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0, 0, 5);">
                     <padding>
                        <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
                     </padding>
                     <children>
                        <Label text="Register New User" textAlignment="CENTER">
                           <font>
                              <Font name="System Bold" size="18.0" />
                           </font>
                           <VBox.margin>
                              <Insets bottom="20.0" />
                           </VBox.margin>
                        </Label>
                        
                        <GridPane hgap="15.0" vgap="10.0">
                           <columnConstraints>
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                           </columnConstraints>
                           <rowConstraints>
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                           </rowConstraints>
                           <children>
                              <Label text="Username:" />
                              <TextField fx:id="usernameField" promptText="Enter username" GridPane.columnIndex="1" />
                              
                              <Label text="Password:" GridPane.rowIndex="1" />
                              <PasswordField fx:id="passwordField" promptText="Enter password" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                              
                              <Label text="Full Name:" GridPane.rowIndex="2" />
                              <TextField fx:id="fullNameField" promptText="Enter full name" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                              
                              <Label text="Email:" GridPane.rowIndex="3" />
                              <TextField fx:id="emailField" promptText="Enter email" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                              
                              <Label text="Phone:" GridPane.rowIndex="4" />
                              <TextField fx:id="phoneField" promptText="Enter phone number" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                              
                              <Label text="Role:" GridPane.rowIndex="5" />
                              <ComboBox fx:id="roleComboBox" prefWidth="200.0" promptText="Select role" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                              
                              <Label fx:id="nationalityLabel" text="Nationality:" GridPane.rowIndex="6" />
                              <TextField fx:id="nationalityField" promptText="Enter nationality" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                           </children>
                        </GridPane>
                        
                        <VBox spacing="10.0">
                           <VBox.margin>
                              <Insets top="10.0" />
                           </VBox.margin>
                           <children>
                              <HBox spacing="10.0">
                                 <children>
                                    <Label fx:id="languagesLabel" text="Languages:" visible="false" />
                                    <TextField fx:id="languagesField" promptText="e.g., English, Nepali, Hindi" visible="false" />
                                 </children>
                              </HBox>
                              
                              <HBox spacing="10.0">
                                 <children>
                                    <Label fx:id="experienceLabel" text="Experience (years):" visible="false" />
                                    <TextField fx:id="experienceField" promptText="Enter years of experience" visible="false" />
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                        
                        <HBox alignment="CENTER" spacing="15.0">
                           <VBox.margin>
                              <Insets top="20.0" />
                           </VBox.margin>
                           <children>
                              <Button fx:id="registerButton" onAction="#handleRegister" prefWidth="120.0" style="-fx-background-color: #32CD32; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-height: 40;" text="Register" />
                              <Button fx:id="backButton" onAction="#handleBack" prefWidth="120.0" style="-fx-background-color: #808080; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-height: 40;" text="Back" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </content>
            </ScrollPane>
         </children>
      </VBox>
   </children>
</VBox>
