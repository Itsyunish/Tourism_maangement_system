<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tourism.controller.LoginController">
   <children>
      <VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: linear-gradient(to bottom, #2196F3, #1976D2);">
         <children>
            <Label text="Nepal Tourism Management System" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <VBox alignment="CENTER" maxWidth="300.0" spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 30;">
               <children>
                  <Label text="🏔️ Welcome" textFill="#1976D2">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Username:" />
                        <TextField fx:id="usernameField" promptText="Enter username" />
                     </children>
                  </VBox>
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Password:" />
                        <PasswordField fx:id="passwordField" promptText="Enter password" />
                     </children>
                  </VBox>
                  <HBox alignment="CENTER" spacing="10.0">
                     <children>
                        <Button fx:id="loginButton" onAction="#handleLogin" prefWidth="100.0" style="-fx-background-color: #2196F3; -fx-text-fill: white;" text="Login" />
                        <Button fx:id="registerButton" onAction="#handleRegister" prefWidth="100.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Register" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
         </padding>
      </VBox>
   </children>
</VBox>
