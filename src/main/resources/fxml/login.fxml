<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tourism.controllers.LoginController">
   <center>
      <VBox alignment="CENTER" style="-fx-background-color: linear-gradient(to bottom, #2E8B57, #228B22);" BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="CENTER" maxWidth="450.0" style="-fx-background-color: white; -fx-background-radius: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.4), 15, 0, 0, 8);">
               <padding>
                  <Insets bottom="40.0" left="50.0" right="50.0" top="40.0" />
               </padding>
               <children>
                  <Label fx:id="titleLabel" text="Journey" textAlignment="CENTER" textFill="#2E8B57">
                     <font>
                        <Font name="System Bold" size="36.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin>
                  </Label>
                  
                  <Label text="Nepal Tourism Management System" textAlignment="CENTER" textFill="#666">
                     <font>
                        <Font name="System" size="14.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="40.0" />
                     </VBox.margin>
                  </Label>
                  
                  <VBox spacing="20.0">
                     <children>
                        <VBox spacing="8.0">
                           <children>
                              <Label fx:id="usernameLabel" text="Username:" style="-fx-font-weight: bold; -fx-font-size: 14px;" />
                              <TextField fx:id="usernameField" promptText="Enter username" style="-fx-pref-height: 45; -fx-font-size: 14px; -fx-background-radius: 10;" />
                           </children>
                        </VBox>
                        
                        <VBox spacing="8.0">
                           <children>
                              <Label fx:id="passwordLabel" text="Password:" style="-fx-font-weight: bold; -fx-font-size: 14px;" />
                              <PasswordField fx:id="passwordField" promptText="Enter password" style="-fx-pref-height: 45; -fx-font-size: 14px; -fx-background-radius: 10;" />
                           </children>
                        </VBox>
                        
                        <HBox spacing="15.0" alignment="CENTER">
                           <children>
                              <Button fx:id="loginButton" onAction="#handleLogin" prefWidth="140.0" style="-fx-background-color: #2E8B57; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-height: 50; -fx-font-size: 16px; -fx-background-radius: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 5, 0, 0, 2);" text="Login" />
                              <Button fx:id="registerButton" onAction="#handleRegister" prefWidth="140.0" style="-fx-background-color: #FF6347; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-height: 50; -fx-font-size: 16px; -fx-background-radius: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 5, 0, 0, 2);" text="Register" />
                           </children>
                           <VBox.margin>
                              <Insets top="20.0" />
                           </VBox.margin>
                        </HBox>
                        
                        <Button fx:id="languageToggleButton" onAction="#toggleLanguage" style="-fx-background-color: #4682B4; -fx-text-fill: white; -fx-background-radius: 15; -fx-pref-height: 35;" text="English" />
                     </children>
                  </VBox>
                  
                  <VBox alignment="CENTER" spacing="5.0">
                     <VBox.margin>
                        <Insets top="30.0" />
                     </VBox.margin>
                     <children>
                        <Label text="Default Admin: Prapanna / 123" style="-fx-font-size: 11px; -fx-text-fill: #888; -fx-font-style: italic;" />
                        <Label text="Default Guide: ram_guide / ram123" style="-fx-font-size: 11px; -fx-text-fill: #888; -fx-font-style: italic;" />
                     </children>
                  </VBox>
               </children>
            </VBox>
         </children>
      </VBox>
   </center>
</BorderPane>
