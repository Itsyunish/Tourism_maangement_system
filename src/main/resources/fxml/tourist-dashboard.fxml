<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tourism.controller.TouristDashboardController">
   <top>
      <VBox style="-fx-background-color: linear-gradient(to right, #2196F3, #21CBF3);">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="20.0">
               <children>
                  <Label fx:id="welcomeLabel" text="Welcome, Tourist!" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                  </Label>
                  <Region HBox.hgrow="ALWAYS" />
                  <Button fx:id="logoutButton" onAction="#handleLogout" style="-fx-background-color: #f44336; -fx-text-fill: white;" text="Logout" />
               </children>
               <padding>
                  <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </top>
   <center>
      <VBox spacing="20.0">
         <children>
            <VBox spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20;">
               <children>
                  <Label text="🏔️ Book Your Adventure" textFill="#2196F3">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
                  <GridPane hgap="15.0" vgap="10.0">
                     <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                     </rowConstraints>
                     <children>
                        <Label text="Attraction:" />
                        <ComboBox fx:id="attractionComboBox" prefWidth="150.0" promptText="Select attraction" GridPane.columnIndex="1" />
                        <Label text="Date:" GridPane.columnIndex="2" />
                        <DatePicker fx:id="datePicker" GridPane.columnIndex="3" />
                        <Label text="Difficulty:" GridPane.rowIndex="1" />
                        <ComboBox fx:id="difficultyComboBox" prefWidth="150.0" promptText="Select difficulty" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Label fx:id="priceLabel" text="Price: $0.00" textFill="#4CAF50" GridPane.columnIndex="2" GridPane.rowIndex="1">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                        <Button fx:id="bookButton" onAction="#handleBooking" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Book Now" GridPane.columnIndex="3" GridPane.rowIndex="1" />
                     </children>
                  </GridPane>
               </children>
            </VBox>
            <VBox spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20;">
               <children>
                  <Label text="📋 Your Bookings" textFill="#2196F3">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
                  <TableView fx:id="bookingTable" prefHeight="200.0">
                     <columns>
                        <TableColumn fx:id="bookingIdColumn" prefWidth="100.0" text="Booking ID" />
                        <TableColumn fx:id="attractionColumn" prefWidth="150.0" text="Attraction" />
                        <TableColumn fx:id="dateColumn" prefWidth="100.0" text="Date" />
                        <TableColumn fx:id="difficultyColumn" prefWidth="100.0" text="Difficulty" />
                        <TableColumn fx:id="priceColumn" prefWidth="100.0" text="Price" />
                        <TableColumn fx:id="statusColumn" prefWidth="100.0" text="Status" />
                     </columns>
                  </TableView>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>
